# Discord Bot 基本配置
TOKEN=
CLIENT_ID=
GUILD_ID=

# Discord 頻道 ID
VIDEO_CHANNEL_ID=
STREAM_CHANNEL_ID=

# 爬蟲設定
CRAWLER_TYPE=fetch                    # 爬蟲類型：fetch 或 puppeteer（已棄用）
CRAWLER_INTERVAL=30                   # 爬蟲間隔時間（分鐘）
CRAWLER_TIMEOUT=30000                 # 爬蟲請求超時時間（毫秒）
CRAWLER_RETRY_ATTEMPTS=3              # 爬蟲重試次數

# 日誌設定
LOG_LEVEL=INFO                        # 日誌級別：ERROR, WARN, INFO, DEBUG
LOG_DIR=./logs                        # 日誌目錄

# 音樂播放設定
MUSIC_VOLUME=0.5                      # 預設音量（0.0-1.0）
MUSIC_QUEUE_SIZE=50                   # 播放隊列最大長度

# 性能設定
MESSAGE_BATCH_SIZE=5                  # 每次發送的連結數量
MESSAGE_DELAY=1000                    # 訊息間隔時間（毫秒）

# 開發設定
NODE_ENV=production                   # 運行環境：development 或 production
DEBUG=false                           # 是否啟用除錯模式

# 安全設定
ENABLE_SECURITY_CHECKS=true           # 是否啟用安全檢查
MAX_COMMAND_LENGTH=500                # 指令最大長度

# API 設定
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/119.0.0.0 Safari/537.36